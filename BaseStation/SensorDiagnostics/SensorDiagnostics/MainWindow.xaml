<UserControl x:Class="HuskyRobotics.UI.sensorHistoryGraph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HuskyRobotics.UI"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="300">
    <Viewbox Stretch="Uniform">
        <Grid>
            <Canvas Name="canGraph" Background="White"
             Width="300" Height="300"
            VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <ComboBox Name="Selection" Background="LightGray"
             Width="75" Height="15"
             VerticalAlignment="Top" HorizontalAlignment="Right" SelectionChanged="ComboBox_SelectionChanged"/>
        </Grid>
    </Viewbox>
</UserControl>
