<Window x:Class="Video_player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Video_player"
        mc:Ignorable="d"
        Title="Video Player"
        Height="110"
        Width="390"
        BorderThickness="3"
        BorderBrush="LightGray"
        Closing="Window_Closing">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <TextBox Height="23" Margin="5" TextWrapping="Wrap"  Text="{Binding Destination}" Width="170" Name="dst" ToolTip="File Destination"/>
            <Label Content="Recording Duration: 00:00:00" Width="170" Margin="5" Name="time"/>
        </DockPanel>
        <Button Content="Launch" Width="75" Margin="5" Height="20" Click="ButtonLaunch"/>
        <Button Content="Record" Width="75" Margin="5" Height="20" Click="ButtonRecord" Name="btnRecord"/>
    </DockPanel>
</Window>
